module semantics/runtime/environment

imports
  semantics/values

signature
  sorts Self
  constructors
    Self : Location -> Self {implicit}
    Init : Self

signature
  sort aliases
    Env = Map<String, Location>
  variables
    E : Env

  constructors
    bindMethod    : Location * Name --> Env
    bindMethods   : Location * List(Name) --> Env
    resolveMethod : Name --> Location

rules

  E |- bindMethod(location, Name(name)) --> { name |--> location, E }.

  E |- bindMethods(_, []) --> E.
  bindMethods(location, [Name(name) | names]) --> { name |--> location, E }
    where bindMethods(location, names) --> E.

  E |- resolveMethod(Name(name)) --> E[name].
